
@{
}

@model Movies

@* Movie form that has input spaces for all the different aspects of the excel sheet*@

<h1> Movie Form </h1>

<form method="post">

    <input type="hidden" asp-for="MovieId" />
    <br />
    <label asp-for="Title"> Movie Title: </label>
    <input asp-for="Title" />
    <br />
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category m in ViewBag.Categories)
        {
            <option value="@m.CategoryId">@m.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Year"> Year: </label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director"> Director: </label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating"> Rating: </label>
    <select asp-for="Rating">
        <option value="g">G </option>
        <option value="pg">PG </option>
        <option value="pg13">PG-13 </option>
        <option value="r">R </option>
    </select>
    <br />
    <label asp-for="Edited"> Has it been edited?: </label>
    <select asp-for="Edited">
        <option value="true">Yes </option>
        <option value="false">No </option>
    </select>
    <br />
    <label asp-for="LentTo"> Lent to: </label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex"> Copied to Plex?: </label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes </option>
        <option value="false">No </option>
    </select>
    <br />
    <label asp-for="Notes"> Notes: </label>
    <input asp-for="Notes" />
    <br />

    <button type="submit"> Submit Movie </button>

    <div asp-validation-summary="All"></div>

</form>



