@*
    This is our Movie List Page where we display the database of movies with some bootstrap to make it look a little nicer
*@
@{
}

@model List<Movies>

@* Creating the tables and populating them *@
<div class="container mt-4">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Movie Title</td>
                <td>Category</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent To</td>
                <td>Copied To Plex</td>
                <td>Notes</td>
            </tr>

        </thead>

        @foreach (var x in Model)
        {
            <tbody>
                <tr>

                    <td>@x.Title</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.CopiedToPlex</td>
                    <td>@x.Notes</td>

                    @* Creating the buttons for the table (edit and delete) *@
                    <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
                    <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
                </tr>
            </tbody>
        }
    </table>
</div>

